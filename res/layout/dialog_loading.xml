<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.samuelZhan.circleprogress"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:background="@drawable/shape_loading_dialog_bg"
    android:orientation="vertical" >
    
    <com.samuelZhan.circleprogress.CircleProgress 
        android:id="@+id/dialog_progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        custom:numOfCircles="8"
        custom:maxRadius="8dp"
        custom:minRadius="2dp"
        custom:isClockwise="false"
        custom:rotateSpeedInMillis="100"/>
    
    <TextView
        android:id="@+id/loading_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_progressBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#FFDD11"/>

</RelativeLayout>
